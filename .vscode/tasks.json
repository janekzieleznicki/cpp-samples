{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cachegrind",
            "command":"valgrind",
            "args": [
                "--tool=cachegrind","${command:cmake.launchTargetPath}"
            ],
            "dependsOn": ["CMake: Build"]
        },
        {
            "label": "valgrind memcheck",
            "command":"valgrind",
            "args": [
                "--tool=memcheck","--leak-check=full","${command:cmake.launchTargetPath}"
            ],
            "dependsOn": ["CMake: Build"]
        },
    ]
}